<% content_for :body_content_title do %>
  <%= @dish.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @dish.name %>
    </p>
  </section>
  <section>
    <h1>Price</h1>
    <p>
      <%=raw @dish.price %>
    </p>
  </section>
  <section>
    <h1>Promotion</h1>
    <p>
      <%=raw @dish.promotion %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @dish.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @dish.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="dishes">
      <% @dishes.each do |dish| %>
        <li>
          <%= link_to dish.name, refinery.dishes_dish_path(dish) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
