= form_for @category_page do |f|
	- if @category_page.errors.any?
		#error_explanation
			%h2= "#{pluralize(@category_page.errors.count, "error")} prohibited this category_page from being saved:"
			%ul
				- @category_page.errors.full_messages.each do |msg|
					%li= msg

	.field
		= f.label :name
		= f.text_field :name
	=image_tag @category_page.image_url(:thumb)
	.field
		= f.label :image
		= f.file_field :image
	.actions
		= f.submit 'Save'
