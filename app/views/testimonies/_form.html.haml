= form_for @testimony, html: {multipart: true} do |f|
	- if @testimony.errors.any?
		#error_explanation
			%h2= "#{pluralize(@testimony.errors.count, "error")} prohibited this testimony from being saved:"
			%ul
				- @testimony.errors.full_messages.each do |msg|
					%li= msg

	.field
		= f.label :author
		= f.text_field :author
	.field
		= f.label :content
		= f.text_area :content, rows: 10, cols:50
	=image_tag @testimony.image_url(:thumb)
	.field
		= f.label :image
		= f.file_field :image
	.actions
		= f.submit 'Save'
